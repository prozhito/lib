{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/esm",
    "sourceMap": true,
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "dom", "ES2017"],
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/**/*.test.tsx"]
}
